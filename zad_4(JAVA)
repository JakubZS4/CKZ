package zad1;

import java.util.Scanner;

public class zad4 {

	public static void main(String[] args) {
		
		
		Scanner klawisz = new Scanner(System.in); 
 		
		System.out.println("Podaj wyniki testów: ");
		
		int test1;
		
		System.out.println("Podaj wynik pierwszego testu: ");
		
		test1 = klawisz.nextInt();
		
		int test2;
		
		System.out.println("Podaj wynik drugiego testu ");
		
		test2 = klawisz.nextInt();
		
		int test3;
		
		System.out.println("Podaj wynik trzeciego testu ");
		
		test3 = klawisz.nextInt();
		
		int srednia;
		
		srednia = (test1+test2+test3)/3;
		
		if (srednia >= 90 && srednia <=100 ) {
			System.out.println("Dostałeś 5");
		}
		else if (srednia >= 80 && srednia <=89 ) {
			System.out.println("Dostałeś 4");
		}
		else if (srednia >= 70 && srednia <=79 ) {
			System.out.println("Dostałeś 3");
		}
		else if (srednia >= 60 && srednia <=69 ) {
			System.out.println("Dostałeś 2");
		}
		else if (srednia < 60 ) {
			System.out.println("Dostałeś 1");
		}
		
		

	}

}
